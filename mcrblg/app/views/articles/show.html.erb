<h3><%= @article.title %></h3>
<p>
  <%= @article.text %>
</p>
<hr />
<p>

<b>Comments:</b>
</p>

<% @article.comments.each do |comm|%>
  <p>
    <%= comm.user.username %> said:
  </p>
  <p>
    <i><%= comm.body %></i>
  </p>
  <hr />
<% end%>

<p>
  <i>Send comment</i>
</p>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.text_area :body, :class => "form-control", :rows => "5"  %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
