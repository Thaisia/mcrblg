<h3>New Article</h3>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </p>

  <p>
    <%= f.label :text %> <br />
    <%= f.text_area :text, :class => "form-control", :rows => "5" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
